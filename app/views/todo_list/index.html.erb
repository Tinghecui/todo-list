<h2>All Reminders</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="todoList">
  <thead>
    <tr>
      <th>Name</th>
      <th>Creation Date</th>
      <th>Due date</th>
    </tr>
  </thead>
  <tbody>
    <% @todoLists.each do |item| %>
      <tr>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.creation_date %>
        </td>
        <td>
          <%= item.due_date %>
        </td>
        <td>
          <%= link_to "More about #{item.name}", todo_list_path(item) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new item', new_todo_list_path, :class => 'btn btn-primary' %>

